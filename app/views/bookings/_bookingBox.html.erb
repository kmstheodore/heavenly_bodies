<div id="booking">
  <h2>Book a Planet</h2>
  <%= simple_form_for(@booking, url: booking_new_path(@booking), data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :start_date,
                  as: :date,
                  required: true%>
      <%= f.input :end_date,
                  as: :date,
                  required: true%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Book", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

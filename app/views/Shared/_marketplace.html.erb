<body>
  <div>
    <h2 id='instructions'>ðŸš€ Click for info ðŸš€</h2>
  </div>
  <div class="dashboard-container">
    <div class="dashboard">
      <div id="booking-card">
        <h2>Your Upcoming Trips <%=current_user.first_name%></h2>
        <table class="table table-striped" style="overflow-y: scroll; height: 62vh;">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Planet</th>
              <th scope="col">Start Date</th>
              <th scope="col">End Date</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |book| %>
            <tr>
              <th scope="row"><%= book.id%></th>
              <td><%= book.planet.name %></td>
              <td><%= book.start_date.strftime('%m/%d/%Y') %></td>
              <td><%= book.end_date.strftime('%m/%d/%Y') %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div id="desc-card">
        <div class="system-flex-container">
        <% @planets.each do |planet| %>
          <div class="planet">
          <%=link_to "#{planet.name}", planet_path(planet)%>
          <%= cl_image_tag planet.photo.key %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
